{
  "name": "@nnest/helpers",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": "please-use-yarn"
  },
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  }
}
