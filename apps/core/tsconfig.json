{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@nnest/*": ["../../modules/*", "../../libs/*", "../../apps/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}